.col-md-6
  = form_for @user, url: {action: "create"} do |f|
    - if @user.errors.any?
      .alert.alert-danger
        %b= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
        %ul
          - @user.errors.full_messages.each do |msg|
            %li= msg
    .form-group
      %input.form-control.input-lg{:name => "user[email]", :placeholder => "Email", :type => "text", :autofocus => (request.fullpath == '/signup' || request.fullpath == '/login'), :value => @user.email }/
    .form-group
      %input.form-control{:name => "user[password]", :placeholder => "Password", :type => "password"}/
    - if !current_user.present?
      .radio
        %label
          - if request.fullpath != '/signup'
            %input#optionsRadios1{:checked => "", :name => "user[action]", :type => "radio", :value => "login", :onclick => "$('h1').html('Log in'); document.getElementById('sign-up').style.display = 'none'; document.getElementById('submit').value = 'Log in '; window.history.replaceState('', 'Title', 'login');"}/
          - else
            %input#optionsRadios1{:name => "user[action]", :type => "radio", :value => "login", :onclick => "$('h1').html('Log in'); document.getElementById('sign-up').style.display = 'none'; document.getElementById('submit').value = 'Log in '; window.history.replaceState('', 'Title', 'login');"}/
          I have an account and want to log in
      .radio
        %label
          - if request.fullpath == '/signup'
            %input#optionsRadios2{:checked => "", :name => "user[action]", :type => "radio", :value => "signup", :onclick => "$('h1').html('Sign up'); document.getElementById('sign-up').style.display = 'block'; document.getElementById('submit').value = 'Sign up'; window.history.replaceState('', 'Title', 'signup');"}/
          - else
            %input#optionsRadios2{:name => "user[action]", :type => "radio", :value => "signup", :onclick => "$('h1').html('Sign up'); document.getElementById('sign-up').style.display = 'block'; document.getElementById('submit').value = 'Sign up'; window.history.replaceState('', 'Title', 'signup');"}/
          I want to make a new account
    #sign-up{:style => "#{'display: none;' if request.fullpath != '/signup' && !current_user}"}
      .form-group
        %input.form-control{:name => "user[password_confirmation]", :placeholder => "Confirm password", :type => "password"}/
      .form-group
        %input.form-control{:name => "user[name]", :placeholder => "Choose a name", :type => "text", :value => @user.name}/
    .actions
      %input#submit.btn.btn-default{:name => :commit, :type => :submit, :value => "#{request.fullpath == '/signup' ? 'Sign up' : request.fullpath == '/login' ? 'Log in' : 'Update'}"}
